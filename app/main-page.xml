<Page loaded="pageLoaded" background-color="blue">
    
        <StackLayout orientation="vertical">
            <!-- Everything is separated in parts. Must be used accordingly with parts in main-page.js! -->

            <!-- Set goal -->
            <TextField width="300px" text="{{txtKeyword}}"  hint="Enter your daily goal, in minutes..." id="txtKeyword" />
            <Button text="Search" height="50px" tap="signin" style="background-color:green;width:300px;border:none;font-size:20px;" />
            
            <!-- Actual usage time vs. Goal -->
            <Progress value="{{ time }}" maxValue="{{ goal }}">
                
            <!-- Pet image -->
            <Image src="{{ pet }}">
        </StackLayout>

</Page>
